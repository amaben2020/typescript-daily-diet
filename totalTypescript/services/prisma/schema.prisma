model User {
  id Int @id @default(autoincrement())
  profile Profile?
  posts Post[]
}

model Profile {
 id Int @id @default(autoincrement())
 user User @relation(fields: [userId], references: [id])
 userId Int @unique // relation scalar field i.e foreign key
}

model Post {
  id Int @id @default(autoincrement())
  author User @relation(fields: [authorId], references: [id])
  authorId Int
}